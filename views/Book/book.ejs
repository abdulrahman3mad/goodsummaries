<%-include("../portials/header")%>
<section class="book-details">
    <div class="container">

        <div class="image-options-title">
            <!--start book_options-->
            <div class="book-options">
                <%if(owner==true){%>
                <a href="/book/<%=book._id%>/edit" class="edit">Edit</a>
                <form method="POST" action="/book/<%=book._id%>?_method=DELETE">
                    <button class="delete" type="submit">Delete</button>
                </form>
                <%}else if(owner!=true){%>
                <%if(!saved){%>
                <form action="/book/save/<%=book._id%>" method="POST">
                    <button class="save" type="submit">Save</button>
                </form>
                <%}else{%>
                <span class="saved">Saved</span>
                <%}%>
                <%}%>
                <!--end book_options-->
            </div>
            <div class="img"><img src="<%=book.coverimagepath%>" />
            </div>
            <div class="book-mainData">
                <h1 class="Title"><%=book.Title%></h1>
                <span class="book-category"><%=book.Category%></span>
            </div>



            <!--start book summary-->
            <div class="summary">
                <%-book.Summary%>
            </div>
            <!--end book summary-->


        </div>

        <!--start comment part-->
        <div class="fb-comments" style="margin-top:30px;" data-href="http://localhost:5000/<%=book._id%>"
            data-numposts="5" data-width="">
        </div>
    </div>
    <!--end comment part-->

</section>
