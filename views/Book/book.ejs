<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=book.Title%></title>
    <link rel="stylesheet" href="../../css/header.css">
    <link rel="stylesheet" href="../../css/book.css">
    <link rel="stylesheet" href="../../css/bootstrap.min.css">
    <link rel="stylesheet" href="../../css/all.min.css">
</head>

<title>
</title>


<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v8.0"
    nonce="zxN8Nk4J"></script>
<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v8.0"
    nonce="3Tk09ksP"></script>

<body>



    <%-include("../portials/header")%>
    <section class="book-details">
        <div class="container">

            <div class="image-options-title">
                <!--start book_options-->
                <div class="book-options">
                    <%if(owner==true){%>
                    <a href="/Goodsummaries/book/<%=book._id%>/edit" class="edit">Edit</a>
                    <form method="POST" action="/Goodsummaries/book/<%=book._id%>?_method=DELETE">
                        <button class="delete" type="submit">Delete</button>
                    </form>
                    <%}else if(owner!=true){%>
                    <%if(!saved){%>
                    <form action="/Goodsummaries/book/save/<%=book._id%>" method="POST">
                        <select class="reading-option" name="reading-option" id="reading-option">
                            <option value="read">Read</option>
                            <option value="reading">Currently Reading</option>
                        </select>
                    </form>
                    <%}else{%>
                    <span class="saved">Saved</span>
                    <%}%>
                <%}%>
                    <!--end book_options-->
                </div>
                <div class="img"><img src="<%=book.coverimagepath%>" />
                </div>
                <div class="book-mainData">
                    <h1 class="Title"><%=book.Title%></h1>
                    <span class="book-category"><%=book.Category%></span>
                </div>



                <!--start book summary-->
                <div class="summary">
                    <%-book.Summary%>
                </div>
                <!--end book summary-->

            </div>

            <!--start comment part-->
            <div class="fb-comments" style="margin-top:30px;" data-href="http://localhost:3000/book/<%=book._id%>"
                data-numposts="5" data-width="">
            </div>
        </div>
        <!--end comment part-->

    </section>
    <script>
        let reading_option = document.querySelector(".reading-option");
        let form = document.querySelector("form")

        reading_option.addEventListener("change", () => {
            form.submit();
        })

    </script>
    <%-include("../portials/scripts.ejs")%>