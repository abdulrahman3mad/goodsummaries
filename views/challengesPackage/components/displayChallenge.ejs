<div class="display-challenge">
    <div class="challenge-header">
        <div class="challenge-options">
            <span class="edit">Edit</span>
            <form method="POST" action="/Goodsummaries/challenges/delete/<%=challenge._id%>?_method=DELETE">
                <button class="delete" type="submit">Delete</button>
            </form>
        </div>
    </div>

    <p class="">
        <%if(currentUser){%>You<%}else{%>
                <a href="/Goodsummaries/profilePage/<%=user.name%>" class="user-name">
                    <%=user.name%>
                </a>
                <%}%> have put
                    <%=challenge.numberOfSummaries%> of <%=challenge.numberOfBooks%>
                            Summaries
    </p>
    <div>
        <%let myNumberOfBook=challenge.numberOfBooks%>
            <% let myNumberOfSummaries=challenge.numberOfSummaries %>
                <% const totalValue=(myNumberOfSummaries/myNumberOfBook)*100 %>

                    <progress value="<%=totalValue%>" max="100">
                    </progress>

                    <div class="summaries">
                        <%books.forEach(book=>{%>
                            <a href="/Goodsummaries/book/<%=book._id%>" class="book-link">
                                <div class="summary">
                                    <div class="img"> <img class="book_img" src="<%=book.coverimagepath%>"
                                            alt="Card image cap">
                                    </div>
                                </div>
                            </a>
                            <%})%>
                    </div>
    </div>
</div>